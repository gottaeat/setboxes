[Unit]
Description=CAKE SQM instance for %i

After=sys-subsystem-net-devices-%i.device systemd-networkd.service
Wants=sys-subsystem-net-devices-%i.device systemd-networkd.service

[Service]
Type=oneshot
RemainAfterExit=yes

ExecStart = /opt/mss/bin/setcake.py start --iface %i --ifb %i-ingress --down 46 --up 15
ExecStop = /opt/mss/bin/setcake.py stop --iface %i --ifb %i-ingress

[Install]
WantedBy=multi-user.target
